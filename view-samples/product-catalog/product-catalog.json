{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
  "hideSelection": true,
  "hideColumnHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "position": "relative",
      "text-align": "left",
      "display": "block",
      "font-family": "Segoe UI",
      "background-color": "#F3F2F1",
      "padding": "10px 10px",
      "width": "=if(@window.innerWidth > 480, '98%', '92%')"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "box-shadow": "0 3px 6px 0 #00000029"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "width": "88px",
              "display": "flex",
              "justify-content": "center",
              "overflow": "hidden",
              "background-color": "#e1dfdd"
            },
            "children": [
              {
                "elmType": "img",
                "style": {
                  "height": "88px",
                  "flex-shrink": "0"
                },
                "attributes": {
                  "src": "[$Product_x0020_Picture]"
                }
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "flex": "1",
              "padding-left": "16px",
              "padding-right": "20px",
              "padding-top": "0px",
              "padding-bottom": "0px",
              "background-color": "#FFFFFF"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "margin-top": "8px",
                  "flex-wrap": "wrap"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "flex": "1 0 180px"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "14px",
                          "color": "#444444",
                          "font-weight": "600"
                        },
                        "txtContent": "[$Product_x0020_Name]"
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "width": "180px"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "14px",
                          "color": "#323130",
                          "font-weight": "600"
                        },
                        "txtContent": "='$'+[$PriceCal]"
                      }
                    ]
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "flex-wrap": "wrap-reverse",
                  "padding-bottom": "10px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "flex": "1 0 180px"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "12px",
                          "color": "#323130",
                          "font-weight": "normal"
                        },
                        "txtContent": "[$Product_x0020_Type]"
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "12px",
                          "color": "#323130",
                          "font-weight": "normal"
                        },
                        "txtContent": "='Available in '+[$Available_x0020_Market]"
                      },
                      {
                        "elmType": "div",
                        "children": [
                          {
                            "elmType": "a",
                            "style": {
                              "font-size": "12px",
                              "color": "#0078d4",
                              "font-weight": "normal",
                              "text-decoration": "none"
                            },
                            "attributes": {
                              "target": "_blank",
                              "href": "[$Spec_x0020_Sheet]"
                            },
                            "txtContent": "Specifications"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "width": "180px"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "12px",
                          "font-weight": "normal",
                          "color": "#606e5c",
                          "display": "flex"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "style": {
                              "width": "110px"
                            },
                            "txtContent": "Release date"
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "color": "#323130"
                            },
                            "txtContent": "=toLocaleDateString([$Release_x0020_Date])"
                          }
                        ]
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "12px",
                          "font-weight": "normal",
                          "color": "#606e5c",
                          "display": "flex"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "style": {
                              "width": "110px"
                            },
                            "txtContent": "Screen size"
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "color": "#323130"
                            },
                            "txtContent": "[$Screen_x0020_Size]"
                          }
                        ]
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "font-size": "12px",
                          "font-weight": "normal",
                          "color": "#606e5c",
                          "display": "flex"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "style": {
                              "width": "110px"
                            },
                            "txtContent": "Screen resolution"
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "color": "#323130"
                            },
                            "txtContent": "[$Screen_x0020_Resolution]"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}