{
  "schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
  "hideSelection": true,
  "hideColumnHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "text-align": "left",
      "display": "flex",
      "font-family": "Segoe UI",
      "padding": "20px 20px 20px 20px",
      "border": "solid 1px #e6e6e6",
      "margin-top": "21px"
    },
    "children": [
      {
        "elmType": "img",
        "style": {
          "width": "50px",
          "height": "50px"
        },
        "attributes": {
          "src": "='https://spoprod-a.akamaihd.net/files/fabric/assets/item-types/40/'+[$File_x0020_Type]+'.svg'"
        }
      },
      {
        "elmType": "div",
        "style": {
          "flex": "1",
          "margin-left": "20px"
        },
        "children": [
          {
            "elmType": "div",
            "children": [
              {
                "elmType": "a",
                "style": {
                  "font-size": "16px",
                  "color": "#0078d4",
                  "text-decoration": "none"
                },
                "attributes": {
                  "target": "_blank",
                  "href": "[$FileRef]"
                },
                "txtContent": "[$FileLeafRef]"
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "margin-top": "15px",
              "color": "#444444",
              "font-size": "11px"
            },
            "children": [
              {
                "elmType": "span",
                "txtContent": "=toString([$File_x0020_Size])+' bytes'"
              },
              {
                "elmType": "span",
                "style": {
                  "margin-left": "20px"
                },
                "txtContent": "='Last modified ' + toLocaleDateString([$Modified])"
              }
            ]
          }
        ]
      }
    ]
  }
}