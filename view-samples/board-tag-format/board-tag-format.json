{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/board-formatting.schema.json",
  "hideSelection": true,
  "formatter": {
    "elmType": "div",
    "attributes": {
      "class": "sp-card-container sp-card-container-noPadding"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "height": "=if([$Expand]== false, if(length([$Assigned]) == 0,'120px','155px'), '60px')"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "position": "relative"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "margin-top": "0px",
                  "height": "30px",
                  "width": "30px",
                  "font-size": "15px",
                  "border-radius": "50%",
                  "position": "relative"
                },
                "attributes": {
                  "class": "ms-bgColor-themePrimary ms-fontColor-themePrimary"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "padding": "7px"
                    },
                    "attributes": {
                      "iconName": "=if([$Category] == 'Completed ✔️', 'accept', if([$Category] == 'Cancel', 'cancel', if([$Category] == 'Pending','HourGlass',if([$Category] == 'Started','InsertSignatureLine','More'))))",
                      "class": "=if([$Category] == 'Completed ✔️', 'ms-fontColor-white', if([$Category] == 'Cancel', 'ms-fontColor-white', if([$Category] == 'Pending', 'ms-fontColor-white', if([$Category] == 'Started', 'ms-fontColor-white', 'ms-fontColor-white'))))"
                    },
                    "customCardProps": {
                      "openOnEvent": "click",
                      "directionalHint": "bottomCenter",
                      "isBeakVisible": true,
                      "formatter": {
                        "elmType": "div",
                        "style": {
                          "display": "block",
                          "padding": "5px"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "font-size": "10px"
                            },
                            "txtContent": "ACTIONS",
                            "attributes": {
                              "class": "ms-fontColor-gray100"
                            }
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "txtContent": "=if([$Flag] == true,'Remove flag','Add flag')",
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Flag": "=if([$Flag] == true,0,1)"
                              }
                            }
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "txtContent": "Edit properties",
                            "customRowAction": {
                              "action": "editProps"
                            }
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "share"
                            },
                            "txtContent": "Copy link"
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Expand": "=if([$Expand]==false,1,0)"
                              }
                            },
                            "txtContent": "=if([$Expand]==false,'Minimize Card','Maximize Card')"
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "font-size": "10px"
                            },
                            "txtContent": "MOVE TO",
                            "attributes": {
                              "class": "ms-fontColor-gray100"
                            }
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Category": "Started"
                              }
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block"
                                },
                                "attributes": {
                                  "iconName": "InsertSignatureLine"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block",
                                  "padding-left": "5px"
                                },
                                "txtContent": "Started"
                              }
                            ]
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Category": "Pending"
                              }
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block"
                                },
                                "attributes": {
                                  "iconName": "HourGlass"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block",
                                  "padding-left": "5px"
                                },
                                "txtContent": "Pending"
                              }
                            ]
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "display": "block",
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Category": "Completed ✔️"
                              }
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block"
                                },
                                "attributes": {
                                  "iconName": "accept"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block",
                                  "padding-left": "5px"
                                },
                                "txtContent": "Completed"
                              }
                            ]
                          },
                          {
                            "elmType": "div",
                            "style": {
                              "padding": "5px 10px",
                              "cursor": "pointer"
                            },
                            "customRowAction": {
                              "action": "setValue",
                              "actionInput": {
                                "Category": "Cancel"
                              }
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block"
                                },
                                "attributes": {
                                  "iconName": "cancel"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "display": "inline-block",
                                  "padding-left": "5px"
                                },
                                "txtContent": "Cancel"
                              }
                            ]
                          }
                        ]
                      }
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "position": "absolute",
                  "margin": "0 0 0px 14px",
                  "padding-top": "10px",
                  "border-radius": "25px",
                  "height": "=if([$Expand]==true,'40px',if(length([$Assignee]) == 0,'95px','130px'))",
                  "width": "2px",
                  "background-color": "#666"
                }
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "padding-left": "10px",
              "width": "240px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "box-shadow": "rgba(149, 157, 165, 0.2) 0px 8px 24px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "display": "flex",
                      "padding": "5px 10px 0px 10px",
                      "border-bottom": "2px solid #eee",
                      "background-color": "=if([$Flag]== true, '#f8d7da', 'White')"
                    },
                    "attributes": {
                      "class": "ms-bgColor-white"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "width": "100%",
                          "line-height": "30px",
                          "white-space": "nowrap",
                          "overflow": "hidden",
                          "text-overflow": "ellipsis"
                        },
                        "attributes": {
                          "title": "[$Title]",
                          "class": "ms-fontWeight-bold"
                        },
                        "txtContent": "[$Title]"
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "display": "=if([$Flag]== true,'','none')",
                          "padding-top": "8px",
                          "font-size": "20px",
                          "color": "#e81123"
                        },
                        "attributes": {
                          "iconName": "EndPointSolid"
                        },
                        "customRowAction": {
                          "action": "setValue",
                          "actionInput": {
                            "Flag": "=if([$Flag] == true,0,1)"
                          }
                        }
                      },
                      {
                        "elmType": "div",
                        "inlineEditField": "[$Tag]",
                        "children": [
                          {
                            "columnFormatterReference": "[$Tag]"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "display": "=if([$Expand] == false,'none','flex')",
                      "background-color": "=if([$Flag]== true, '#f8d7da', 'White')",
                      "padding": "5px "
                    },
                    "attributes": {
                      "iconName": "=if([$Expand]==true,'CirclePlus','')"
                    },
                    "customRowAction": {
                      "action": "setValue",
                      "actionInput": {
                        "Expand": "=if([$Expand] == false,1,0)"
                      }
                    }
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "display": "=if([$Expand] == false,'flex','none')",
                      "font-size": "12px",
                      "padding": "5px 10px 5px 10px",
                      "max-height": "65px",
                      "background-color": "=if([$Flag]== true, '#f8d7da', 'White')"
                    },
                    "attributes": {
                      "class": "ms-bgColor-white"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "max-width": "160px",
                          "text-overflow": "ellipsis",
                          "overflow": "hidden",
                          "text-decoration": "=if([$Category] == 'Cancel','line-through','')"
                        },
                        "txtContent": "=if(lastIndexOf([$Description]+'.','.') > 96, substring([$Description], 0, 96)+'...',[$Description]) ",
                        "customCardProps": {
                          "openOnEvent": "click",
                          "directionalHint": "bottomCenter",
                          "formatter": {
                            "elmType": "div",
                            "style": {
                              "max-width": "300px"
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "padding": "10px"
                                },
                                "txtContent": "[$Description]"
                              }
                            ]
                          }
                        }
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "padding": "0px 5px 5px 10px"
                        },
                        "children": [
                          {
                            "elmType": "div",
                            "style": {
                              "position": "relative",
                              "width": "50px",
                              "height": "50px",
                              "float": "left"
                            },
                            "inlineEditField": "[$Date]",
                            "attributes": {
                              "class": ""
                            },
                            "children": [
                              {
                                "elmType": "div",
                                "style": {
                                  "position": "absolute",
                                  "top": "2px",
                                  "left": "0",
                                  "width": "32px",
                                  "height": "24px"
                                },
                                "txtContent": "=if(getMonth([$Date])==0, 'Jan', if(getMonth([$Date])==1, 'Feb', if(getMonth([$Date])==2, 'Mar', if(getMonth([$Date])==3, 'Apr',  if(getMonth([$Date])==4, 'May', if(getMonth([$Date])==5, 'Jun', if(getMonth([$Date])==6 , 'Jul', if(getMonth([$Date])==7, 'Aug', if(getMonth([$Date])==8 , 'Sep', if(getMonth([$Date])==9, 'Oct', if(getMonth([$Date])==10, 'Nov', if(getMonth([$Date])==11, 'Dec', ''))))))))))))",
                                "attributes": {
                                  "class": "ms-fontWeight-bold ms-fontSize-16 ms-fontColor-themePrimary ms-fontColor-themeTertiary--hover"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "position": "absolute",
                                  "display": "flex",
                                  "justify-content": "center",
                                  "align-items": "center",
                                  "top": "25px",
                                  "left": "0",
                                  "width": "32px",
                                  "height": "25px",
                                  "border": "1px"
                                },
                                "txtContent": "=getDate([$Date])",
                                "attributes": {
                                  "class": "ms-fontWeight-bold ms-fontSize-20 ms-fontColor-themePrimary ms-fontColor-themeTertiary--hover"
                                }
                              },
                              {
                                "elmType": "div",
                                "style": {
                                  "position": "absolute",
                                  "top": "0",
                                  "left": "35px",
                                  "width": "10px",
                                  "height": "48px",
                                  "border": "1px",
                                  "word-wrap": "break-word"
                                },
                                "txtContent": "=getYear([$Date])",
                                "attributes": {
                                  "class": "ms-fontWeight-bold ms-fontSize-10 ms-fontColor-themePrimary ms-fontColor-themeTertiary--hover"
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "padding-left": "10px",
                      "display": "=if(length([$Assigned]) == 0 || [$Expand]==true, 'none', '')",
                      "background-color": "=if([$Flag]== true, '#f8d7da', 'White')"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "display": "flex"
                        },
                        "inlineEditField": "[$Assigned]",
                        "children": [
                          {
                            "elmType": "div",
                            "attributes": {
                              "class": "ms-fontWeight-bold"
                            },
                            "txtContent": "Assigned:"
                          },
                          {
                            "forEach": "personIterator in [$Assigned]",
                            "elmType": "a",
                            "attributes": {
                              "class": "=if(loopIndex('personIterator') >= 5, 'sp-card-userContainer', 'sp-card-userContainer sp-card-keyboard-focusable')"
                            },
                            "style": {
                              "display": "=if(loopIndex('personIterator') >= 5, 'none', '')"
                            },
                            "children": [
                              {
                                "elmType": "img",
                                "defaultHoverField": "[$personIterator]",
                                "attributes": {
                                  "src": "=getUserImage([$personIterator.email], 'S')",
                                  "title": "[$personIterator.title]",
                                  "class": "sp-card-userThumbnail"
                                },
                                "style": {
                                  "display": "=if(length([$Assigned]) > 5 && loopIndex('personIterator') >= 4, 'none', '')"
                                }
                              },
                              {
                                "elmType": "div",
                                "attributes": {
                                  "class": "ms-bgColor-neutralLight ms-fontColor-neutralSecondary sp-card-userOthers"
                                },
                                "style": {
                                  "display": "=if(length([$Assigned]) > 5 && loopIndex('personIterator') == 4, '', 'none')"
                                },
                                "customCardProps": {
                                  "formatter": {
                                    "elmType": "div",
                                    "attributes": {
                                      "class": "sp-card-personCallout"
                                    },
                                    "children": [
                                      {
                                        "forEach": "personIterator in [$Assigned]",
                                        "elmType": "div",
                                        "attributes": {
                                          "class": "sp-card-userContainer sp-card-userCustomCard"
                                        },
                                        "style": {
                                          "display": "=if(loopIndex('personIterator') < 4, 'none', '')"
                                        },
                                        "children": [
                                          {
                                            "elmType": "img",
                                            "defaultHoverField": "[$personIterator]",
                                            "attributes": {
                                              "src": "=getUserImage([$personIterator.email], 'S')",
                                              "title": "[$personIterator.title]",
                                              "class": "sp-card-userThumbnail"
                                            }
                                          }
                                        ]
                                      }
                                    ]
                                  },
                                  "openOnEvent": "hover"
                                },
                                "children": [
                                  {
                                    "elmType": "span",
                                    "txtContent": "='+' + toString(length([$Assigned]) - (4))"
                                  }
                                ]
                              }
                            ]
                          },
                          {
                            "elmType": "div",
                            "attributes": {
                              "class": "sp-card-userTitle"
                            },
                            "style": {
                              "display": "=if(length([$Assigned]) == 1, '', 'none')"
                            },
                            "defaultHoverField": "[$personIterator]",
                            "txtContent": "[$Assigned.title]"
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}