{
  "$schema": "http://columnformatting.sharepointpnp.com/columnFormattingSchema.json",
  "elmType": "div",
  "children": [
    {
      "elmType": "span",
      "txtContent": "@currentField",
      "style": {
        "padding-left": "8px"
      }
    }
  ],
  "attributes": {
    "class": "sp-field-dataBars"
  },
  "style": {
    "padding": "0",
    "overflow-x": "visible",
    "width": {
      "operator": "?",
      "operands": [
        {
          "operator": ">=",
          "operands": [
            "@currentField",
            "20"
          ]
        },
        "100%",
        {
          "operator": "+",
          "operands": [
            {
              "operator": "*",
              "operands": [
                "@currentField",
                5
              ]
            },
            "%"
          ]
        }
      ]
    }
  }
}