{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "style": {},
  "children": [
    {
      "elmType": "div",
      "style": {
        "font-size": "14pt",
        "padding": "5px",
        "cursor": "pointer"
      },
      "attributes": {
        "iconName": "Calendar"
      },
      "customRowAction": {
        "action": "setValue",
        "actionInput": {
          "CustomDateYear": "@now"
        }
      }
    },
    {
      "elmType": "div",
      "attributes": {
        "iconName": "Add"
      },
      "style": {
        "font-size": "12pt",
        "padding": "5px",
        "cursor": "pointer"
      },
      "customRowAction": {
        "action": "setValue",
        "actionInput": {
          "CustomDateYear": "=addDays(Date([$CustomDateYear]),365)"
        }
      }
    },
    {
      "elmType": "div",
      "style": {
        "font-size": "12pt",
        "padding": "5px"
      },
      "txtContent": "=if(length([$CustomDateYear]) == 0,'(no date)',toLocaleDateString((Date([$CustomDateYear])))"
    },
    {
      "elmType": "div",
      "style": {
        "font-size": "12pt",
        "padding": "5px",
        "cursor": "pointer"
      },
      "attributes": {
        "iconName": "Remove"
      },
      "customRowAction": {
        "action": "setValue",
        "actionInput": {
          "CustomDateYear": "=addDays(Date([$CustomDateYear]),-365)"
        }
      }
    },
    {
      "elmType": "div",
      "style": {
        "cursor": "pointer"
      },
      "attributes": {
        "iconName": "ErrorBadge"
      },
      "customRowAction": {
        "action": "setValue",
        "actionInput": {
          "CustomDateYear": ""
        }
      }
    }
  ]
}