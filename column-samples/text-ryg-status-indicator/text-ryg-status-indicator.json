{
    "$schema": "http://columnformatting.sharepointpnp.com/columnFormattingSchema.json",
    "elmType": "div",
    "children": [
      {
        "elmType": "span",
        "style": {
          "width": "14px",
          "height": "14px",
          "border-radius": "50%",
          "background-color": {
            "operator": "?",
            "operands": [
              {
                "operator": "==",
                "operands": [
                  "@currentField",
                  "Green"
                ]
              },
              "#107c10",
              {
                "operator": "?",
                "operands": [
                  {
                    "operator": "==",
                    "operands": [
                      "@currentField",
                      "Yellow"
                    ]
                  },
                  "#ffb900",
                  {
                    "operator": "?",
                    "operands": [
                      {
                        "operator": "==",
                        "operands": [
                          "@currentField",
                          "Red"
                        ]
                      },
                      "#e81123",
                      ""
                    ]
                  }
                ]
              }
            ]
          }
        }
      }
    ]
  }