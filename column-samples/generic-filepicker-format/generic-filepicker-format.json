{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "children": [
    {
      "elmType": "div",
      "style": {
        "display": "=if(length(@currentField)>0,'none','')"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "width": "150px",
            "height": "30px",
            "border": "2px solid black",
            "cursor": "pointer"
          },
          "inlineEditField": "@currentField"
        },
        {
          "elmType": "div",
          "style": {
            "display": "=if(length(@currentField)>0,'none','flex')"
          },
          "children": [
            {
              "elmType": "div",
              "style": {
                "cursor": "pointer"
              },
              "attributes": {
                "title": "Select file",
                "iconName": "ImageSearch",
                "class": "ms-fontSize-20 ms-fontColor-themePrimary "
              },
              "customCardProps": {
                "openOnEvent": "click",
                "isBeakVisible": true,
                "directionalHint": "bottomCenter",
                "formatter": {
                  "elmType": "div",
                  "style": {
                    "padding": "20px"
                  },
                  "children": [
                    {
                      "elmType": "filepreview",
                      "attributes": {
                        "src": "=@currentWeb+'[replaceUrlPathtoLibrary]'"
                      },
                      "style": {
                        "width": "=@window.innerWidth/2+'px'",
                        "height": "=@window.innerHeight/2+'px'"
                      }
                    }
                  ]
                }
              }
            },
            {
              "elmType": "div",
              "style": {
                "padding-left": "5px",
                "cursor": "pointer"
              },
              "attributes": {
                "class": "ms-fontColor-themePrimary"
              },
              "txtContent": "Select file",
              "customCardProps": {
                "openOnEvent": "click",
                "isBeakVisible": true,
                "directionalHint": "bottomCenter",
                "formatter": {
                  "elmType": "div",
                  "style": {
                    "padding": "20px"
                  },
                  "children": [
                    {
                      "elmType": "filepreview",
                      "attributes": {
                        "src": "=@currentWeb+'[replaceUrlPathtoLibrary]'"
                      },
                      "style": {
                        "width": "=@window.innerWidth/2+'px'",
                        "height": "=@window.innerHeight/2+'px'"
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "elmType": "div",
      "style": {
        "display": "=if(length(@currentField)>0,'','none')"
      },
      "children": [
        {
          "elmType": "div",
          "style": {
            "padding": "10px",
            "font-size": "32px",
            "cursor": "pointer"
          },
          "attributes": {
            "iconName": "Photo2",
            "class": "ms-fontColor-themePrimary"
          },
          "customCardProps": {
            "openOnEvent": "click",
            "directionalHint": "bottomCenter",
            "formatter": {
              "elmType": "div",
              "style": {
                "padding": "5px"
              },
              "children": [
                {
                  "elmType": "filepreview",
                  "style": {
                    "width": "=@window.innerWidth/2+'px'",
                    "height": "=@window.innerHeight/2+'px'"
                  },
                  "attributes": {
                    "src": "@currentField"
                  }
                }
              ]
            }
          }
        },
        {
          "elmType": "div",
          "style": {
            "cursor": "pointer"
          },
          "attributes": {
            "title": "Delete image",
            "iconName": "ErrorBadge",
            "class": "ms-fontColor-themePrimary"
          },
          "customRowAction": {
            "action": "setValue",
            "actionInput": {
              "FilePicker": ""
            }
          }
        }
      ]
    }
  ]
}