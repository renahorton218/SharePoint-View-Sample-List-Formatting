                ]
              },
              "#107c10",
              {
                "operator": "?",
                "operands": [
                  {
                    "operator": "==",
                    "operands": [
                      "@currentField",
                      "Amber"
                    ]
                  },
                  "#ff8c00",
                  {
                    "operator": "?",
                    "operands": [
                      {
                        "operator": "==",
                        "operands": [
                          "@currentField",
                          "Yellow"
                        ]
                      },
                      "#ffb900",
                      ""
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
