      "padding-left": "14px",
      "background-color": {
        "operator": "?",
        "operands": [
          {
            "operator": "==",
            "operands": [
              "@currentField",
              "Red"
            ]
          },
          "#e81123",
          {
            "operator": "?",
            "operands": [
              {
                "operator": "==",
